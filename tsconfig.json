{
  "compilerOptions": {
    "rootDir": "src",

    "target": "es2016",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",

    "module": "commonjs",

    "types": [
      "node",
      "@types/jest",
    ],
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "allowJs": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["./src/**/*.ts"],
}
