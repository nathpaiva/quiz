{
  "compilerOptions": {
    "rootDir": "src",

    "target": "es6",

    "lib": ["dom", "dom.iterable", "esnext"],

    "moduleResolution": "node",

    "module": "commonjs",

    "types": ["node", "@types/jest"],
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "allowJs": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
